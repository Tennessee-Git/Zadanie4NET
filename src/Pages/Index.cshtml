@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="text-center ">Dodawanie elementu do bazy</h1>

<form method="post" class="mt-4">
    <div class="form-group row justify-content-center">
        <label for="inputId" class="col-sm-1 col-form-label">ID</label>
        <div class="col-sm-5">
            <input type="number" asp-for="Product.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputId" class="col-sm-1 col-form-label">Zdjęcie</label>
        <div class="col-sm-5">
            <input type="url" asp-for="Product.Image" class="form-control" />
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputId" class="col-sm-1 col-form-label">Title</label>
        <div class="col-sm-5">
            <input type="text" asp-for="Product.Title" class="form-control" />
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputId" class="col-sm-1 col-form-label">Maker</label>
        <div class="col-sm-5">
            <input type="text" asp-for="Product.Maker" class="form-control" />
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputId" class="col-sm-1 col-form-label">Description</label>
        <div class="col-sm-5">
            <input type="text" asp-for="Product.Description" class="form-control" />
        </div>
    </div>
    <div class="row mt-4 text-center justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>